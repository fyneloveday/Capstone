@model IEnumerable<Capstone.Models.ReadingListModel>

@{
    ViewBag.Title = "ReadingList";
}

<h2>ReadingList</h2>

<p>
    <td>
        @Html.ActionLink("My Profile", "Index", "Member")  ||                      
    </td>
    <td>
        @Html.ActionLink("Add Book", "ReadingListAdd")
    </td>
    
</p>
<table class="table">
    
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AuthorFirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AuthorLastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MyReview)
        </th>

        @*<th>
            @Html.DisplayNameFor(model => model.ApplicationUserId)
        </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorFirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MyReview)
            </td>
         </tr>  
            @*<td>
                @Html.DisplayFor(modelItem => item.ApplicationUserId)
            </td>*@
        <tr>
            <td>
                @Html.ActionLink("Edit", "ReadingListEdit", new { id = item.ID }) ||
            </td>
            <td>
                @Html.ActionLink("Delete", "ReadingListDelete", new { id = item.ID }) ||
            </td>

        </tr>
    }

</table>
